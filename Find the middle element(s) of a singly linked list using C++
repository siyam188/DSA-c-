#include <bits/stdc++.h>
using namespace std;

class Node
{
public:
    int val;
    Node* next;

    Node(int val)
    {
        this->val = val;
        this->next = NULL;
    }
};

void insert_at_tail(Node* &head, Node* &tail, int val)
{
    Node* newnode = new Node(val);

    if (head == NULL)
    {
        head = newnode;
        tail = newnode;
        return;
    }

    tail->next = newnode;
    tail = newnode;
}

void print_linked_list(Node* head)
{
    Node* temp = head;
    int cnt = 0;

    while (temp != NULL)
    {
        cout << temp->val << endl;
        cnt++;
        temp = temp->next;
    }
    cout << cnt << endl;
    if(cnt % 2 == 0)
    {
            int mid = cnt / 2;
           for(int i = 0; i< mid-1; i++)
           {
                temp = temp->next;  
           }
        cout << temp->val<<temp->next->val << endl;
    }
    else
    {
           int mid = cnt/2;
           for(int i =0;i<mid;i++)
           {
                temp = temp->next;  
           }
             cout << temp->val << endl;
    }
}

int main()
{
    Node* head = NULL;
    Node* tail = NULL;
    int val;

    while (true)
    {
        cin >> val;
        if (val == -1)
            break;

        insert_at_tail(head, tail, val);
    }

    print_linked_list(head);
    return 0;
}
